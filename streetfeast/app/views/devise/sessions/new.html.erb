<style type="text/css">
  .card {
    box-shadow: 0 10px 20px 0 rgba(0,0,0,0.2);
    transition: 0.3s;
    border: 1px solid;
    border-radius: 5px;
    height: auto;
}
</style>
<center>
<div class="card bg-light mb-3" style="max-width: 26rem;">
  <div class="card-header"><h2>Sign In</h2></div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <fieldset>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Enter email"%>
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Password" %>
        </div>

          <div class="form-check disabled">
            <label class="form-check-label">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              Remember me
            </label>
          </div>
        </fieldset>
        <br>
        <button type="submit" class="btn btn-primary btn_large">Log in</button>
      </fieldset>
    <%end%>
    <a href="/users/password/new" class="link">Forgot your password?</a>
    <br>
    <br>
    <br>
    <button class="loginBtn loginBtn--facebook">
      Login with Facebook
    </button>

    <%= link_to "Login with Google", user_omniauth_authorize_path(:google_oauth2), class: "loginBtn loginBtn--google" %>
  </div>
</div>
</center>

<style>
.btn_large
{
  width: 200px;
}

.link{
  font-size: 12px;
}

.loginBtn {
  box-sizing: border-box;
  position: relative;
  /* width: 13em;  - apply for fixed size */
  margin: 0.2em;
  padding: 0 15px 0 46px;
  border: none;
  text-align: left;
  line-height: 34px;
  white-space: nowrap;
  border-radius: 0.2em;
  font-size: 12px;
  width: 165px;
  color: #FFF;
  display: inline-block;
}
.loginBtn:before {
  content: "";
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  width: 34px;
  height: 100%;
}
.loginBtn:focus {
  outline: none;
}
.loginBtn:active {
  box-shadow: inset 0 0 0 32px rgba(0,0,0,0.1);
}


/* Facebook */
.loginBtn--facebook {
  background-color: #4C69BA;
  background-image: linear-gradient(#4C69BA, #3B55A0);
  /*font-family: "Helvetica neue", Helvetica Neue, Helvetica, Arial, sans-serif;*/
  text-shadow: 0 -1px 0 #354C8C;
}
.loginBtn--facebook:before {
  border-right: #364e92 1px solid;
  background: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/14082/icon_facebook.png') 6px 6px no-repeat;
}
.loginBtn--facebook:hover,
.loginBtn--facebook:focus {
  background-color: #5B7BD5;
  background-image: linear-gradient(#5B7BD5, #4864B1);
  cursor: pointer;
}


/* Google */
.loginBtn--google {
  /*font-family: "Roboto", Roboto, arial, sans-serif;*/
  background: #f2f2f2;
  color: black;
  border: 1px solid #a6a6a6;
}
.loginBtn--google:before {
  border-right: #a6a6a6 1px solid;
  background: url('/assets/google_logo.png') 6px 6px no-repeat;
}
.loginBtn--google:hover,
.loginBtn--google:focus {
  background: #e6e6e6;
  text-decoration: none;
  color: #000;
}
</style>
